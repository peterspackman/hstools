from setuptools import setup, find_packages
from codecs import open
import sys

README = "${CMAKE_CURRENT_SOURCE_DIR}/README.md"
with open(README, encoding='utf-8') as f:
    long_description = f.read()

if sys.platform == 'darwin':
    suffix = 'dylib'
else:
    suffix = 'so'


setup(
    name='hstools',

    version='${PROJECT_VERSION}',

    description='Hirshfeld surfaces etc. in python.',
    url='https://github.com/peterspackman/hstools',
    author='Peter Spackman',
    author_email='peterspackman@fastmail.com.au',
    license='BSD',

    classifiers=[
        'Development Status :: 3 - Alpha',
        'Intended Audience :: Developers',
        'License :: OSI Approved :: BSD License',
        'Programming Language :: Python :: 3.5',
    ],

    keywords='hirshfeld surface crystallography tonto molecule crystal',


    packages=find_packages(exclude=['tonto', 'tests', 'docs', 'build']),

    install_requires=[
      'fastcluster',
      'h5py',
      'hdbscan',
      'matplotlib',
      'numpy',
      'periodictable',
      'plyfile',
      'scikit-learn',
      'scipy',
      'tqdm',
      ],
    package_data = {
        'hstools': ['*.'+suffix, '*.h5'],
    },
    entry_points= {
      'console_scripts': ['hstools=hstools.command_line:main'],
    }
)
